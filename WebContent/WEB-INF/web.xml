<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>myblog</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodeFilter</filter-name>
    <filter-class>blog.filter.EncodeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>blog.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
      <taglib-location>/WEB-INF/c.tld</taglib-location>
    </taglib>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <el-ignored>false</el-ignored>
    </jsp-property-group>
  </jsp-config>
  <servlet>
    <servlet-name>login.do</servlet-name>
    <servlet-class>blog.servlet.UserM</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login.do</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>blog.do</servlet-name>
    <servlet-class>blog.servlet.BlogM</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>blog.do</servlet-name>
    <url-pattern>/blog.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>notice.do</servlet-name>
    <servlet-class>blog.servlet.NoticeM</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>notice.do</servlet-name>
    <url-pattern>/notice.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>comment.do</servlet-name>
    <servlet-class>blog.servlet.CommentM</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>comment.do</servlet-name>
    <url-pattern>/comment.do</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>manage.do</servlet-name>
    <servlet-class>blog.servlet.AdminM</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>manage.do</servlet-name>
    <url-pattern>/manage.do</url-pattern>
  </servlet-mapping>
</web-app>